<body>
    <div id="overlay">
        <div id="keyword">MyEnterprise</div>
        <div id="timer">15:00</div>
        <button id="startButton">Démarrer l'Accès</button>
    </div>

    <div id="red-flash"></div>

    <script>
        // --- Code JavaScript pour le Compte à Rebours et l'Animation de Fin ---

        const startButton = document.getElementById('startButton');
        const timerDisplay = document.getElementById('timer');
        const overlay = document.getElementById('overlay');
        const redFlash = document.getElementById('red-flash');
        
        const initialDuration = 15 * 60; // 15 minutes en secondes
        let countdownInterval = null;
        let remainingTime = initialDuration;

        function formatTime(totalSeconds) {
            const minutes = Math.floor(totalSeconds / 60);
            const seconds = totalSeconds % 60;
            // Assurer le format MM:SS
            const formattedMinutes = String(minutes).padStart(2, '0');
            const formattedSeconds = String(seconds).padStart(2, '0');
            return `${formattedMinutes}:${formattedSeconds}`;
        }

        /**
         * Déclenche l'animation de fin (point rouge qui grossit)
         */
        function endSequence() {
            // 1. Masquer l'interface de compte à rebours
            overlay.style.opacity = '0';
            overlay.style.transition = 'opacity 0.5s';
            
            // 2. Préparer et afficher le calque rouge
            redFlash.style.display = 'flex';
            
            // 3. Utiliser requestAnimationFrame pour s'assurer que le navigateur
            //    reconnaît la transition entre l'état initial et l'état final.
            requestAnimationFrame(() => {
                
                // État final de l'animation: Agrandissement massif
                // Un facteur de 200 assure que le dot de 10px couvre largement l'écran
                redFlash.style.transform = 'translate(-50%, -50%) scale(200)';
                redFlash.style.opacity = '1';
            });
            
            // 4. Afficher le message après que l'expansion soit visible
            setTimeout(() => {
                redFlash.style.width = '100vw'; // Assurer qu'il couvre bien
                redFlash.style.height = '100vh';
                redFlash.style.borderRadius = '0'; // Ne plus être un cercle
                redFlash.style.boxShadow = 'none'; // Retirer la lueur initiale
                redFlash.innerHTML = '<div style="font-size: 3em; color: white;">TEMPS ÉCOULÉ</div>';
            }, 1000); // 1000ms < 1500ms (durée de la transition)
        }

        function updateCountdown() {
            if (remainingTime <= 0) {
                clearInterval(countdownInterval);
                timerDisplay.textContent = "00:00";
                endSequence(); // Nouvelle séquence de fin
                return;
            }

            remainingTime--;
            timerDisplay.textContent = formatTime(remainingTime);
        }

        startButton.addEventListener('click', () => {
            if (countdownInterval) return;

            startButton.disabled = true;
            startButton.textContent = "SEQUENCE EN COURS...";
            remainingTime = initialDuration; 
            timerDisplay.style.color = "#00ff99";
            timerDisplay.style.textShadow = "0 0 10px #00ff99, 0 0 20px #00ff99";

            // Démarrer le compte à rebours
            countdownInterval = setInterval(updateCountdown, 1000);
        });

        // Afficher l'heure initiale
        timerDisplay.textContent = formatTime(initialDuration);
    </script>

</body>
</html>
